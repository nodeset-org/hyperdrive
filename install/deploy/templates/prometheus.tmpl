      - "host.docker.internal:host-gateway"
networks:
  net:
    {{- if .Hyperdrive.EnableIPv6 }}
    enable_ipv6: true
    {{- end}}
  {{- range $network := .Hyperdrive.GetAdditionalDockerNetworks}}
  {{$network}}:
    external: true
  {{- end}}
