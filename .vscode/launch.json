    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Package",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/hyperdrive-cli",
            "args": [
                "-c",
                "${env:HOME}/.hyperdrive",
                "-s",
                "/usr/share/hyperdrive",
                "em",
                "config",
                "get-param",
                "--param",
                "exampleFloat"
            ]
        },
        {
            "name": "Attach to Process",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "processId": "${command:pickProcess}"
        }
    ]
}